  <section class="hero">
    <div class="hero-content">
      <h1>Your $10 Can Change Someoneâ€™s Future</h1>
      <p>100% of your gift funds clean water projects, with updates that show real impact.</p>
      <button class="cta-btn" id="confetti-btn">Change Someone's Life</button>
      <!-- Confetti will be added here by JavaScript -->
    </div>
  </section>
  <script>
    // Beginner-friendly confetti effect
    document.getElementById('confetti-btn').addEventListener('click', function () {
      const heroContent = this.parentElement;
      for (let i = 0; i < 20; i++) { // 20 confetti pieces
        const confetti = document.createElement('div');
        confetti.className = 'confetti';
        // Random position around the button
        confetti.style.left = (120 + Math.random() * 80) + 'px';
        confetti.style.top = (60 + Math.random() * 20) + 'px';
        // Random color for fun
        confetti.style.background = ['#ffcf2d', '#a35a35', '#00bfff', '#ff69b4', '#32cd32'][Math.floor(Math.random() * 5)];
        heroContent.appendChild(confetti);
        // Remove confetti after animation
        setTimeout(() => confetti.remove(), 1000);
      }
    });
  </script>
